# Database Configuration
DATABASE_URL="postgresql://user:password@host/database"

# OpenRouter API Configuration (for AI story generation and embeddings)
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY="your-openrouter-api-key-here"

# OpenRouter Embedding Model (OpenAI models via OpenRouter)
# Options: openai/text-embedding-3-small (1536 dims), openai/text-embedding-3-large (3072 dims)
OPENROUTER_EMBEDDING_MODEL="openai/text-embedding-3-small"

# Semantic Search Feature Configuration
ENABLE_SEMANTIC_SEARCH="true"
SEMANTIC_SEARCH_MIN_SIMILARITY="0.7"
SEMANTIC_SEARCH_MAX_RESULTS="5"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Email Configuration
RESEND_API_KEY="re_..."

# Upstash Redis (for rate limiting)
UPSTASH_REDIS_REST_URL="https://..."
UPSTASH_REDIS_REST_TOKEN="..."

# Sentry (error tracking)
SENTRY_DSN="https://..."
NEXT_PUBLIC_SENTRY_DSN="https://..."

# UploadThing (file uploads)
UPLOADTHING_SECRET="sk_live_..."
UPLOADTHING_APP_ID="..."

# Feature Flags
NODE_ENV="development"
